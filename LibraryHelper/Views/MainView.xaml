<Window x:Class="LibraryHelper.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:cal="http://www.caliburnproject.org"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        Title="{Binding Path=Title}" 
        MinHeight="300" 
        MinWidth="600" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="80*" />
        </Grid.ColumnDefinitions>
        
        <!-- Upper row -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
            
        </Grid>
        
        <!-- Left column -->
        <Grid Grid.Row="1" Grid.Column="0" >
            <StackPanel Orientation="Vertical" Margin="10">
                <Button Content="Load book ..." 
                        cal:Message.Attach="[Event Click] = [Action LoadAction]" />
                <Button Content="Rename" 
                        IsEnabled="{Binding RenameIsEnabled, Mode=OneWay}"
                        cal:Message.Attach="[Event Click] = [Action RenameAction]" 
                        Background="#FFF08686" />
            </StackPanel>
        </Grid>
        
        <!-- Right column -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="10" Background="#FFE6E4B2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="Before" 
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBlock  Name="TextBefore" 
                                FontSize="16"
                                Background="{x:Null}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="After" 
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBlock  Name="TextAfter"
                                FontSize="16"
                                Background="{x:Null}" />
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1"  Margin="0,5">
                <DockPanel LastChildFill="True">
                    <TextBlock  Text="ISBN"
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBox    Name="TextIsbn"
                                HorizontalAlignment="Stretch" />
                </DockPanel>
            </StackPanel>

            <StackPanel Grid.Row="2"  Margin="0,5">
                <DockPanel>
                    <TextBlock  Text="Title" 
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBox    Name="TextTitle" 
                                HorizontalAlignment="Stretch"/>
                </DockPanel>
                <DockPanel>
                    <TextBlock  Text="Author"
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBox    Name="TextAuthor" 
                                HorizontalAlignment="Stretch"/>
                </DockPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="Published by"
                                FontSize="18" 
                                Width="120" 
                                Background="{x:Null}" />
                    <ComboBox   Name="ComboPublisher" 
                                MinWidth="160"
                                cal:Message.Attach="[Event CurrentChanged] = [Action ComboChangedAction]">
                        <System:String>...</System:String>
                        <System:String>Apress</System:String>
                        <System:String>Wiley</System:String>
                        <System:String>Wrox</System:String>
                        <System:String>O'Reilly</System:String>
                        <System:String>Prantice Hall</System:String>
                        <System:String>Microsoft Press</System:String>
                        <System:String>Addison-Wesley</System:String>
                        <System:String>McGraw-Hill</System:String>
                        <System:String>Packt Publishing</System:String>
                        <System:String>Sybex</System:String>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock  Text="Year"
                                FontSize="18" 
                                Width="80" 
                                Background="{x:Null}" />
                    <TextBox    Name="TextYear" 
                                Width="100"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
    </Grid>
</Window>
